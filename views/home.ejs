<link rel="stylesheet" type="text/css" href="/css/home.css">
	<!-- partials -->
	<!-- <%-include('_header')%> -->
	<h1>Connect-i / <%= title %></h1>
	<!-- <%-include('_footer')%> -->
	<section id="feed-posts">
		<h3>Posts</h3>
		<% if (locals.user) { %>
			<form action="/posts/create" id="new-post-form" method="POST">
				<textarea name="content" cols="30" rows="3" required></textarea>
				<input type="submit" value="Post">
			</form>
		<% } %>
		


		<div id= "posts-list-container">

		 <ul>
			 <% for(post of post) { %>
				<li>
					<p>
						<%= post.content %> 
						<br/>
						<small>
							<%= post.user.name%> 
						</small>
					</p>
					<div class="comments/post">
						<% if (locals.user) { %>
							<form action="/comments/create" id="comments-form" method="POST">
								<input type="text" name="content" placeholder="Any Comments..." required/>
								<input type="hidden" name="post" value="<%= post._id %>"/>
								<input type="submit" value="Add Comments"/>
							</form>
						<% } %>
						<div class ="post-comments-list">
							<div class="post-comments-<%= post._id %> ">
								<% for( comment of post.comments ) { %>
									
										<p>
											<%= comment.content %>
											<br/>
											<small><%= comment.user.name %> </small> 
										</p>
									
								<% } %>
							</div>
						</div>
					</div>
					
				</li>
			 <% } %>
		 </ul>


		</div>
	</section>
